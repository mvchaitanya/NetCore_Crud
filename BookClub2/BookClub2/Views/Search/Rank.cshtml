@model List<BookClub2.Models.BookRank>

@{
    Layout = "~/Views/Shared/_RankLayout.cshtml";
    ViewData["Title"] = "Book ranking";
}


<h1>Book ranking</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Book
            </th>
            <th>
                Average grade
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                @Html.DisplayName(item.DisplayAvgGrade())
            </td>
        </tr>
}
    </tbody>
</table>