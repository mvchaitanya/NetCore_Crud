
@{
    ViewData["Title"] = "Search";
    List<Book> books = ViewBag.Books != null ? ViewBag.Books : null;
    List<Opinion> opinions = ViewBag.Opinions != null ? ViewBag.Opinions : null;
}

<h4>Search for opinion about book</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResult">
            <div class="form-group">
                <label for="BookId" class="control-label">Select a book</label>
                <select name="BookId" class="form-control" asp-items="@(new SelectList(books, nameof(Book.Id), nameof(Book.Title)))">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr/>
@if(opinions != null)
{
    <table class="table">
        <thead>
        <tr>
            <th>
                Nick
            </th>
            <th>
                Content
            </th>
            <th>
                Grade
            </th>
        </tr>
    </thead>
        <tbody>

        @foreach (var item in opinions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nick)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
            </tr>
        }

        </tbody>
    </table>
}


